    <default>
        <reference name="head" before="-">
            <action method="addItem"><type>skin_css</type><name>css/cookieater/cookieater.css</name><params /></action>
        </reference>

        <reference name="before_body_end" before="-">
            <block type="cookieater/popup" name="ep_cookieater" as="cookie.eater" template="cookieater/popup.phtml" />
        </reference>
    </default>
</layout>
